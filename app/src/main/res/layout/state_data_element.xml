<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    app:cardElevation="4dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="6dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333232"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="2dp"
                android:textColor="@android:color/white"
                android:gravity="end"
                android:textStyle="bold"
                style="@android:style/Widget.Material.TextView.SpinnerItem"
                android:text="Confirmed:"/>




                <Button
                    android:id="@+id/confirmed_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/confirmed_button_style"
                    android:text="0"
                    android:textColor="@android:color/white"

                    android:clickable="false"/>


        </LinearLayout>




    <Button
        android:id="@+id/state_name"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:padding="5dp"
        android:textColor="#0064FF"
        android:gravity="center"
        android:background="@drawable/state_name_style"
        android:clickable="false"
        android:textStyle="bold"
        android:text="ANDHAMAN AND NICOBAR ISLANDS"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/recovered_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#00FF00"
                    android:gravity="center"
                    android:text="1000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Recovered"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/active_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#FF9632"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="casual"
                    android:text="1000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Active"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/demise_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="casual"
                    android:text="1000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="casual"
                    android:text="Demised"/>

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>











</androidx.cardview.widget.CardView>